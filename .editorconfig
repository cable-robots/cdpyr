# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
continuation_indent_size = 8

[*.rst]
indent_size = 3

[*.bat]
indent_style = tab

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
